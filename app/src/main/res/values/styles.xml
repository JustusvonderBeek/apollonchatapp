<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewDescriptionStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">20sp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SingleLineEditTextInput" parent="Widget.AppCompat.EditText">
        <item name="singleLine">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="EditTextMessageInput" parent="Widget.AppCompat.EditText">
        <item name="singleLine">false</item>
        <item name="android:background">@drawable/edit_message_border</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="SimpleButton" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">@color/apollon_green</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
    </style>
<!--    Styling for the card view depending on who send the message is done in the binding adapter-->
    <style name="TextMessageOwnStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="TextMessageRemoteStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>