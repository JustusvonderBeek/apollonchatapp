<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextViewDescriptionStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">22sp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SingleLineEditTextInput" parent="Widget.AppCompat.EditText">
        <item name="singleLine">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="EditTextMessageInput" parent="Widget.AppCompat.EditText">
        <item name="singleLine">false</item>
        <item name="android:background">@drawable/edit_message_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="SimpleButton" parent="ThemeOverlay.AppCompat">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
<!--    Styling for the card view depending on who send the message is done in the binding adapter-->
    <style name="TextMessageOwnStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.003</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="TextMessageRemoteStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.003</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    <style name="RoundButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="ListUserTextHeaderStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="ListUserTextContentStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="ListUserTextTimeStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">sans-serif-light</item>
    </style>
    <style name="AttentionTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif-bold</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="color">@color/reject_red</item>
    </style>
    <style name="ImageView.Corner" parent="">
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="ImageView.Round" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>
    <style name="Toolbar.Subtitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/design_default_color_on_primary</item>
    </style>
</resources>