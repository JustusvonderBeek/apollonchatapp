<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/chatListFragment">
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.example.apollonchat.chatlist.ChatListFragment"
        android:label="fragment_chat_list"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_chatListFragment_to_chatViewFragment"
            app:destination="@id/chatViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatViewFragment"
        android:name="com.example.apollonchat.ui.ChatViewFragment"
        android:label="fragment_chat_view"
        tools:layout="@layout/fragment_chat_view" />
</navigation>